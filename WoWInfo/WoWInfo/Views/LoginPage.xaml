<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WoWInfo.Views.LoginPage"
             BackgroundColor="#f5f5f5">        
    <ContentPage.Content>               
        <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center" Padding="20" >            
            <Label Text="Login with" FontSize="Medium" HorizontalOptions="Center"></Label>
            <BoxView HeightRequest="1" WidthRequest="150" HorizontalOptions="Center" BackgroundColor="Black" />
            <Button Text="Facebook" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" 
                    Command="{Binding LoginCommand}" BackgroundColor="#6495ed" />

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
    
    